<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solid_borders"
    android:orientation="horizontal"
   >

    <TextView

        android:id="@+id/sendersname1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.60"
        android:fontFamily="@font/aclonica"
        android:textSize="18sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingVertical="8dp"
        android:layout_gravity="center_vertical"
        android:textStyle="bold" />

    <Button
        android:id="@+id/accept_request"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/button_solid_border2"
        android:text="ACCEPT" />

    <Button
        android:id="@+id/decline_request"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/button_solid_border"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="DECLINE" />


</LinearLayout>