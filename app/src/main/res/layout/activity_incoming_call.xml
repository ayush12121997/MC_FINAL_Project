<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/TitleBlue"
    tools:context=".IncomingCall">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming call from "
        android:fontFamily="@font/mulibold"
        android:textColor="@color/FitWhite"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/ANOTHERTEXTVIEW"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="195dp"
        android:src="@drawable/bluavatar"
        android:layout_gravity="center"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming call from "
        android:fontFamily="@font/mulibold"
        android:textColor="@color/FitWhite"
        android:textSize="30sp"
        android:layout_marginBottom="85dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/incomingCallText"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/declineCallButton"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@drawable/declinep"
            android:onClick="declineCall"
            android:layout_marginRight="80dp"

            />


        <VideoView
            android:id="@+id/blackhole"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            app:srcCompat="@raw/videox"
       />

        <Button
            android:id="@+id/pickCallButton"
            android:layout_width="55dp"
            android:scaleX="-1"
            android:layout_height="match_parent"
            android:background="@drawable/acceptp"
            android:onClick="acceptCall"
            android:layout_marginLeft="80dp"
          />


    </LinearLayout>


</LinearLayout>