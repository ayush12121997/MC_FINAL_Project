<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gallerylayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <Gallery
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="737dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-7dp"
        android:background="@color/TitleBlue" />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="460dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/layout_white_curved"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ayush"
            android:scaleX="-1"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mulibold"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/TitleBlue"
            android:textSize="15sp"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mulibold"
            android:text="@string/Login"
            android:textAlignment="center"
            android:textColor="@color/TitleBlue"
            android:textSize="30sp"


            />

        <EditText
            android:id="@+id/EDT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"

            android:fontFamily="@font/muliblack"
            android:hint="@string/login_hint"
            android:inputType="textPersonName"
            android:textAlignment="viewStart"
            android:textColorHint="@color/TheRightGrey"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/EDT2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muliblack"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColorHint="@color/TheRightGrey"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="175dp"
        android:background="@drawable/circular_solid_borders"
        android:padding="20dp"
        android:paddingHorizontal="30dp"
        android:text="âœ”"
        android:textSize="40sp"
        android:onClick="Autheticate_Login"/>

    <Button
        android:id="@+id/RegistrationButton"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/solid_borders"
        android:layout_marginBottom="42dp"
        android:text="@string/Register"
        android:textSize="20dp"
        android:onClick="Register_User"
        android:fontFamily="@font/mulibold"
        android:textColor="@color/FitWhite"/>


</RelativeLayout>